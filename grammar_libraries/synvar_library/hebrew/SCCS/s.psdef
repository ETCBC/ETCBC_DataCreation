# k[1] : part of speech
      sp == art :: k[1] = 0
      sp == verb :: k[1] = 1
      sp == subs :: k[1] = 2
      sp == nmpr :: k[1] = 3
      sp == advb :: k[1] = 4
      sp == prep :: k[1] = 5
      sp == conj :: k[1] = 6
